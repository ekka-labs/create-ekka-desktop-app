{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EKKA Desktop",
  "version": "0.2.0",
  "identifier": "ai.ekka.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "EKKA Desktop",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://api.ekka.ai/desktop/releases/latest.json"
      ],
      "pubkey": "REPLACE_WITH_TAURI_PUBLIC_KEY"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../branding/icon.icns",
      "icons/icon.png"
    ],
    "resources": [
      "resources/ekka-engine-bootstrap"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
